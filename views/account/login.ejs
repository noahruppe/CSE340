<% if (title) { %>
    <h1><%= title %></h1>
<% } else { 
    //Handle redirection in your controller instead
    // res.redirect('/');
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="position-box">
    <div class="login-set-up">
        <form action="/account/login" method="post">
            <div>
                <label for="email">Email: </label>
                <input type="email" name="account_email" id="the-email" required value="<%= locals.account_email%>">
            </div>
            <div>
                <label for="password">Password: </label>
                <span class="infosaid">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
                <input type="password" name="account_password" id="the-password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            </div>
            <button type="submit">Login</button>
        </form>

        <p>Don't have an account? <a href="/account/register">Sign Up Here</a></p>
    </div>
</div>
